Para crear un uberjar
java -jar payara-micro-5.194.jar --deploy transporte.war --outputUberJar transporte.jar

java -jar /home/avbravo/software/payara/payara-micro-5.194.jar --deploy /home/avbravo/NetBeansProjects/utp/alexis/transporte/target/transporte.war --outputUberJar /home/avbravo/Descargas/transporte.jar


EJECUTAR CON PAYARAMICRO
 java -jar home/avbravo/software/payara/payara-micro-5.194.jar  --deploy /home/avbravo/NetBeansProjects/javscaz/fiscal/fiscalweb/target/fiscalweb.war --port '8081'

ejecutarlo en puerto 8081
java -jar transporte.jar --port '8081'


SUBIRLO AL SERVER
scp transporte.jar   avbravo@192.168.60.3:/home/avbravo/

